@page
@model E_Pet.Pages.Hayvan_Ekleme
@{
ViewData["Title"] = "Hayvan Ekle";
Layout = "_Layout";
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>E-Pati Hayvan Ekle</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #5A9690;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        header {
            background-color: #2F5755;
            padding: 20px;
        }

        .header-container {
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
            gap: 50px;
        }

        .logo {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .logo img {
            width: 90px;
            height: 90px;
        }

        .logo h1 {
            font-size: 36px;
            color: white;
            margin: 0;
        }

        .container1 {
            display: flex;
            justify-content: center;
            flex-grow: 1;
            align-items: center;
            margin-top: 20px;
            flex-direction: column;
        }

        .animal-form {
            width: 400px;
            background-color: #E9F1EF;
            padding: 20px;
            border-radius: 8px;
            margin: 20px 0px 40px 0px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-group label {
            display: block;
            margin-bottom: 5px;
        }

        .form-group input[type="text"],
        .form-group input[type="url"] {
            width: 100%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 10px;
        }

        .radio-group label,
        .checkbox-group label {
            margin-right: 10px;
        }

        .btn {
            background-color: #5A9690;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            width: 100%;
        }

        .btn:hover {
            background-color: #2F5755;
        }

        .text-success, .text-danger {
            margin-top: 10px;
        }

        a {
            color: white;
            text-decoration: none;
        }

        #Home {
            position: absolute;
            left: 15px;
            bottom: 10px;
            display: flex;
            align-items: center;
            background-color: #2F5755;
            color: white;
            border: none;
            border-radius: 10px;
            padding: 8px 12px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            text-decoration: none;
        }

        #Home:hover {
            background-color: #5A9690;
        }

        #Home i {
            margin-left: 5px;
        }

       
        footer {
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            background-color: #2F5755;
            color: white;
            padding: 30px 0;
            text-align: center;
        }

        .footer-content {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 30px;
            flex-wrap: wrap;
        }

        .contact-icon-text {
            display: flex;
            align-items: center;
            gap: 10px;
        }

    </style>
</head>
<body>
<header>
    <div class="header-container">
        <div class="logo">
            <img class="img1"
                 src="https://ssltr.com.tr/FileUpload/MediaFolder/66fd5c94a22095a5fefa097c/1620b6e6-46c2-4ed8-ac12-f1d688dc3b2d.png"
                 alt="Logo">
            <h1>E-Pati</h1>
        </div>

        <a asp-page="Index" id="Home">
            <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#e8eaed">
                <path d="m313-440 224 224-57 56-320-320 320-320 57 56-224 224h487v80H313Z"/>
            </svg>
            <i>Ana Sayfa</i>
        </a>
    </div>
</header>

<div class="container1">
    <form method="post" class="animal-form">
        <h2 style="text-align:center; margin-bottom: 15px;">Hayvan Ekle</h2>

        <div class="form-group">
            <label for="animal-name">Hayvan Adı</label>
            <input id="animal-name" asp-for="Animals.Name" placeholder="Örn: Pamuk" required/>
            <span class="text-danger">@TempData["NameError"]</span>
        </div>

        <div class="form-group">
            <label for="animal-type">Hayvan Türü</label>
            <input type="text" id="animal-type" asp-for="Animals.Type" placeholder="Örn: Kedi, Köpek" required/>
            <span class="text-danger">@TempData["TypeError"]</span>
        </div>

        <div class="form-group">
            <label>Fotoğraf URL'si</label>
            <input type="url" asp-for="Animals.ImgUrl" placeholder="Örn: https://..." required/>
            <span class="text-danger">@TempData["ImgUrlError"]</span>
        </div>

        <div class="form-group">
            <label>Cinsiyet</label>
            <div class="radio-group">
                <label>
                    <input type="radio" asp-for="Animals.Gender" value="Dişi" required/> Dişi
                </label>
                <label>
                    <input type="radio" asp-for="Animals.Gender" value="Erkek" required/> Erkek
                </label>
            </div>
            <span class="text-danger">@TempData["GenderError"]</span>
        </div>

        <div class="form-group">
            <label>Aşı Durumu</label>
            <div class="checkbox-group">
                <label>
                    <input type="checkbox" asp-for="Animals.VaccineStatus"/> Aşılı
                </label>
            </div>
        </div>

        <button type="submit" class="btn">Kaydet</button>

        @if (!string.IsNullOrEmpty(TempData["SuccessMessage"]?.ToString()))
        {
        <div class="text-success">@TempData["SuccessMessage"]</div>
        }

        @if (!string.IsNullOrEmpty(TempData["ErrorMessage"]?.ToString()))
        {
        <div class="text-danger">@TempData["ErrorMessage"]</div>
        }
    </form>
</div>

<footer>
    <div class="footer-content">
        <div class="contact-icon-text">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24"
                 stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round"
                      d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 0 0 2.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 0 1-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 0 0-1.091-.852H4.5A2.25 2.25 0 0 0 2.25 4.5v2.25Z"/>
            </svg>
            <p>Telefon: <a href="tel:+05XXXXXXXXX">05XXXXXXXXX</a></p>
        </div>
        <div class="contact-icon-text">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24"
                 stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round"
                      d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75"/>
            </svg>
            <p>
                E-Posta: <a href="mailto:e-pet@gmail.tr">e-pet@gmail.tr</a>
                <span style="padding-left: 25px">E-Pati © 2025</span>
            </p>
        </div>
    </div>
</footer>
</body>
</html>
